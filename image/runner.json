{
    "variables": {
      "machine_type": "var",
      "region": "var",
      "zone": "var",
      "project_id": "var",
      "path": "var"
    },
    "builders": [
      {
        "type": "googlecompute",
        "project_id": "{{user `project_id`}}",
        "machine_type": "{{user `machine_type`}}",
        "source_image_family": "ubuntu-2004-lts",
        "region": "{{user `region`}}",
        "zone": "{{user `zone`}}",
        "image_description": "Ubuntu Runner for GitHub Action",
        "image_name": "ubuntu-runner",
        "disk_size": 40,
        "disk_type": "pd-ssd",
        "ssh_username": "root"
      }
    ],
    "provisioners": [
      {
        "type": "shell",
        "script": "{{user `path`}}/init.sh"
      }
    ]
  }